    <div class="col-md-9">
          <table class="table" >
          <thead>
            <tr>
              <th><%= t "Baslik" %></th>
              <th><%= t "Mesajı" %></th>
              <th><%= t "Resmi" %></th>
              <th colspan="4"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.msg %></td>
                <td><%= image_tag post.image.url(:thumb) %></td>
                <td><%= link_to t('Göster'), post, class:'btn btn-info' %></td>
                <td><%= link_to t('Düzenle'), edit_post_path(post), class:'btn btn-warning' %></td>
                <td><%= link_to t('Silme'), post, method: :delete, data: { confirm: 'Silmek istediğinize emin misiniz?' },class:'btn btn-danger' %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
      <br>
      <p id="notice"><%= notice %></p>
      <%= link_to t('Yeni Mesaj'), new_post_path,class:'fa fa-pencil-square-o fa-2x' %>
     
     
      
