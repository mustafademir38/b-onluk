    <h2><span class="glyphicon glyphicon-log-in"> Giriş İşlemi</h2>
    <hr/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Mail_Adresiniz %><br />
    <%= f.email_field :email, autofocus: true ,class:'form-control' %>
  </div>

  <div class="field">
    <%= f.label :Sifreniz %><br />
    <%= f.password_field :password, autocomplete: "off" ,class:'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Beni_Hatirla %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Giriş Yap",class:'btn btn-primary' %>
  </div>
<% end %>

